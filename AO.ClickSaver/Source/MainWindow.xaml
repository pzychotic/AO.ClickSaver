                    <local:MissionInfo x:Name="_missionInfo2" Margin="0,130,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <local:MissionInfo x:Name="_missionInfo3" Margin="0,235,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <local:MissionInfo x:Name="_missionInfo4" Margin="0,340,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <local:MissionInfo x:Name="_missionInfo5" Margin="0,445,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
